{
  "name": "automationexercise-wdio-tests",
  "version": "1.0.0",
  "description": "This project is a structured WebdriverIO v9 test automation setup for testing an existing website.",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "main": "index.js",
  "scripts": {
    "test:local": "wdio run config/wdio.conf.js",
    "test:ci": "wdio run config/wdio.conf.js",
    "grid:up": "docker compose -f infra/docker-compose.yml pull && docker compose -f infra/docker-compose.yml up -d",
    "grid:down": "docker compose -f infra/docker-compose.yml down -v",
    "grid:logs": "docker compose -f infra/docker-compose.yml logs -f",
    "grid:status": "curl -s http://localhost:4444/status | jq '.value.ready'",
    "report:allure:generate": "allure generate allure-results --clean -o allure-report",
    "report:allure:open:ci": "bash -lc 'allure open \"${ALLURE_PATH:-$HOME/Downloads/allure/allure-report}\"'",
    "report:allure:open:local": "bash -lc 'pnpm exec allure generate allure-results --clean -o allure-report && pnpm exec allure open allure-report'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix:format": "pnpm lint:fix && pnpm format"
  },
  "keywords": [
    "webdriverio",
    "mocha",
    "e2e",
    "test automation",
    "ci/cd",
    "github actions",
    "web",
    "selenium-grid",
    "docker",
    "allure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.13.1",
    "@wdio/allure-reporter": "^9.19.1",
    "@wdio/cli": "9.18.4",
    "@wdio/globals": "9.17.0",
    "@wdio/junit-reporter": "9.18.0",
    "@wdio/local-runner": "9.18.0",
    "@wdio/mocha-framework": "9.18.0",
    "@wdio/spec-reporter": "9.18.0",
    "allure-commandline": "^2.34.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "expect-webdriverio": "^5",
    "globals": "^16.3.0",
    "prettier": "^3.6.2"
  }
}
