{
  "name": "regnat-testing",
  "version": "1.0.0",
  "private": true,
  "description": "Regnat is a structured WebdriverIO v9 test automation framework for scalable end-to-end testing.",
  "type": "module",
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=10 <11"
  },
  "packageManager": "pnpm@10.15.0",
  "main": "index.js",
  "scripts": {
    "test:e2e": "wdio run config/wdio.e2e.conf.js",
    "test:smoke": "wdio run config/wdio.cross.browser.smoke.conf.js",
    "infra:up": "docker compose -f infra/docker-compose.yml pull && docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down -v",
    "infra:cross:up": "COMPOSE_PROFILES=smoke pnpm infra:up",
    "infra:cross:down": "COMPOSE_PROFILES=smoke pnpm infra:down",
    "infra:logs": "docker compose -f infra/docker-compose.yml logs -f",
    "infra:status": "bash -lc 'curl -s http://localhost:4444/status | grep -q \"\\\"ready\\\": true\" && echo true || echo false'",
    "report:allure:generate": "pnpm exec allure generate reports/allure/allure-results --clean -o reports/allure/allure-report",
    "report:allure:open:ci": "bash -lc 'pnpm exec allure open \"${ALLURE_PATH:-$HOME/Downloads/allure/allure-report}\"'",
    "report:allure:open:local": "bash -lc 'pnpm exec allure generate reports/allure/allure-results --clean -o reports/allure/allure-report && pnpm exec allure open reports/allure/allure-report'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix:format": "pnpm lint:fix && pnpm format"
  },
  "keywords": [
    "webdriverio",
    "mocha",
    "e2e",
    "smoke",
    "automation",
    "selenium-grid",
    "docker",
    "ci",
    "github-actions",
    "allure",
    "junit",
    "testing",
    "visual-regression",
    "dotenv",
    "cross-browser"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.2",
    "@wdio/allure-reporter": "^9.19.2",
    "@wdio/cli": "9.19.2",
    "@wdio/globals": "9.17.0",
    "@wdio/junit-reporter": "9.19.2",
    "@wdio/local-runner": "9.19.2",
    "@wdio/mocha-framework": "9.19.2",
    "@wdio/spec-reporter": "9.19.2",
    "allure-commandline": "^2.34.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "expect-webdriverio": "^5",
    "globals": "^16.3.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
